<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/game_beijing"
    tools:context="com.meiji.ysj.youxidating.Game1Activity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/game_bingjng1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/game_layout1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@mipmap/game_touxiang">

            <ImageView
                android:id="@+id/game_im_touxiang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/game_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/game_layout1"
            android:text="昵称"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/game_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/game_layout1"
            android:text="ID:888666"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/game_tv_money"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/game_tv_name"
            android:background="@mipmap/game_jingbi"
            android:gravity="center" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="723dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        android:background="@mipmap/game_xiaoxitongzhi"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/game_tv_donggao"
            android:layout_width="680dp"
            android:layout_height="match_parent"
            android:background="@null" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/game_gonggao" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="309dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <FrameLayout

            android:id="@+id/game_im_z1"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@mipmap/game_z1" >
            <TextView
                android:id="@+id/game_tv_gonggao1"
                android:padding="15dp"
                android:text="公告"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/game_im_z2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@id/game_im_z1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@mipmap/game_z2" />

        <FrameLayout
            android:id="@+id/game_im_l2"
            android:layout_width="200dp"
            android:layout_height="265dp"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/game_im_z2"
            android:background="@mipmap/game_l2" />

        <FrameLayout
            android:id="@+id/game_im_l1"
            android:layout_width="200dp"
            android:layout_height="265dp"
            android:layout_marginRight="-70dp"
            android:layout_marginTop="35sp"
            android:layout_toLeftOf="@id/game_im_l2"
            android:background="@mipmap/game_l1" />

        <FrameLayout
            android:id="@+id/game_im_r1"
            android:layout_width="200dp"
            android:layout_height="265dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/game_im_z2"
            android:background="@mipmap/game_r1">


        </FrameLayout>

        <FrameLayout
            android:id="@+id/game_im_r2"
            android:layout_width="200dp"
            android:layout_height="265dp"
            android:layout_marginLeft="-70dp"
            android:layout_marginTop="35sp"
            android:layout_toRightOf="@id/game_im_r1"
            android:background="@mipmap/game_r2">

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/game_ll_xiaoxi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/game_xiaoxi" />
        <LinearLayout
            android:layout_marginLeft="150dp"
            android:orientation="horizontal"
            android:id="@+id/game_ll_gerenzhongxing"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/game_ll_xiaoxi"
            android:background="@mipmap/game_gerenzhongxing" />

        <LinearLayout
            android:layout_marginRight="150dp"
            android:layout_toLeftOf="@id/game_ll_xiaoxi"
            android:orientation="horizontal"
            android:id="@+id/game_ll_sehzhi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@mipmap/game_shezhi" />



    </RelativeLayout>






</android.support.constraint.ConstraintLayout>
